@using ShopStore.Services.CategoryService.Models
@model IEnumerable<CategoryDTO>
@{
    ViewData["Title"] = "Index";
}

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @if (Model.Any())
    {
        @foreach(var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="2">No Categories</td></tr>
    }
</table>


