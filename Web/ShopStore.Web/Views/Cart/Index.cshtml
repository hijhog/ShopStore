@model IEnumerable<CartDTO>
@using ShopStore.Services.Contract.Models
@{
    ViewData["Title"] = "Index";
    decimal totalSum = 0;
}

<h1>Your Cart</h1>

<table class="table table-sm">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
        @foreach (var cart in Model)
        {
            <tr>
                <td>
                    @if (cart.ProductImage.Length != 0)
                    {
                        <img style='height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(cart.ProductImage))" />
                    }
                    else
                    {
                        @:No image
                    }
                </td>
                <td>@cart.ProductName</td>
                <td>@cart.Quantity</td>
                <td>$ @cart.Price</td>
                <td><a asp-action="RemoveProduct" asp-route-productId="@cart.ProductId">Remove From Cart</a></td>
            </tr>
            totalSum += cart.Price;
        }
    <tr>
        <td colspan="3"><b>Total Sum:</b></td>
        <td>$ @totalSum</td>
        <td></td>
        <td>
            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Order" asp-action="MakeOrder">To Order</a>
        </td>
    </tr>
</table>
