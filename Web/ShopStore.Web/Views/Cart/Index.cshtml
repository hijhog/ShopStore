@model IEnumerable<ProductDTO>
@using ShopStore.Services.Data.Models
@{
    ViewData["Title"] = "Index";
    decimal totalSum = 0;
}

<h1>Your Cart</h1>

<table class="table table-sm">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        @foreach (var prod in Model)
        {
            <tr>
                <td>
                    @if (prod.Image.Length != 0)
                    {
                        <img style='height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(prod.Image))" />
                    }
                    else
                    {
                        @:No image
                    }
                </td>
                <td>@prod.Name</td>
                <td>@prod.Description</td>
                <td>$ @prod.Price</td>
                <td>@prod.Category</td>
                <td><a asp-action="RemoveProduct" asp-route-productId="@prod.Id">Remove From Cart</a></td>
            </tr>
            totalSum += prod.Price;
        }
    }
    else
    {
        <tr><td colspan="6">No Products</td></tr>
    }
    <tr>
        <td colspan="3"><b>Total Sum:</b></td>
        <td>$ @totalSum</td>
        <td></td>
        <td></td>
    </tr>
</table>
