@model IEnumerable<ProductDTO>
@using ShopStore.Services.Models
@{
    var errorMessage = ViewBag.ErrorMessage;
}
<div>
    <a asp-action="Create">Create New Product</a>
</div>
@if (string.IsNullOrEmpty(errorMessage))
{
    <div class="text-danger">@errorMessage</div>
}
<table class="table table-sm">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th></th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.Id</td>
                <td>@prod.Name</td>
                <td>@prod.Description</td>
                <td>@prod.Price.ToString("C")</td>
                <td>@prod.Category</td>
                <td><a asp-action="Edit" asp-route-id="@prod.Id">Edit</a></td>
                <td><a asp-action="Remove" asp-route-id="@prod.Id">Remove</a></td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="7">No Categories</td></tr>
    }
</table>

