
@{
    string storeId = ((Guid)ViewBag.StoreId).ToString();
}
<table id="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>ProductCount</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="storeProduct">
                    <div class="row">
                        <div class="col-md-4"><b>Name:</b></div>
                        <div class="col-md-8"><span id="prod_name"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4"><b>Description:</b></div>
                        <div class="col-md-8"><span id="prod_desc"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4"><b>Category:</b></div>
                        <div class="col-md-8"><span id="prod_category"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4"><b>Price:</b></div>
                        <div class="col-md-8"><span id="prod_price"></span></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4"><b>Product Count:</b></div>
                        <div class="col-md-8">
                            <input class="form-control form-control-sm" type="number" name="ProductCount" id="ProductCount" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="addProduct(window.product)">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    window.storeId = '@storeId';
</script>
<script src="~/js/Admin/Store/ProductList.js"></script>
