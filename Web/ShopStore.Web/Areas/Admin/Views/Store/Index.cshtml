@model IEnumerable<StoreDTO>
@using ShopStore.Services.Data.Models
@using ShopStore.Common
@{
    ViewData["Title"] = "Index";
    string errorMessage = ViewBag.ErrorMessage;
}
<div>
    <a asp-action="Create">Add New Store</a>
</div>
@if (string.IsNullOrEmpty(errorMessage))
{
    <div class="text-danger">@errorMessage</div>
}
<table class="table table-sm">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        @foreach (var store in Model)
        {
            <tr>
                <td>@store.Id</td>
                <td>@store.Name</td>
                <td><a asp-action="ProductList" asp-route-storeId="@store.Id">Add Products</a></td>
                @if (User.IsInRole(GlobalConstants.Admin))
                {
                    <td><a asp-action="Edit" asp-route-id="@store.Id">Edit</a></td>
                    <td><a asp-action="Remove" asp-route-id="@store.Id">Remove</a></td>
                }
                else
                {
                    <td></td>
                    <td></td>
                }
            </tr>
        }
    }
    else
    {
        <tr><td colspan="5">No Stores</td></tr>
    }
</table>


